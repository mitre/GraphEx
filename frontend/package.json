{
	"name": "graphex",
	"version": "1.0.0",
	"private": true,
	"author": "MITRE",
	"license": "ISC",
	"scripts": {
		"dev": "vite",
		"dev-server": "run-p dev watch-server",
		"watch": "nodemon --watch src --ext 'js,ts,vue' --exec 'npm run build'",
		"watch-server": "nodemon --watch ../graphex --ext py --exec 'cd .. && python3 -m graphex serve --port 8080 --root ./graphex'",
		"build": "run-p type-check build-only",
		"build-only": "vite build",
		"type-check": "vue-tsc --noEmit",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
		"format": "prettier --write src/"
	},
	"dependencies": {
		"@codemirror/lang-html": "^6.4.7",
		"@codemirror/lang-javascript": "^6.2.1",
		"@codemirror/lang-json": "github:codemirror/lang-json",
		"@codemirror/lang-markdown": "github:codemirror/lang-markdown",
		"@codemirror/lang-python": "^6.1.3",
		"@codemirror/lang-xml": "github:codemirror/lang-xml",
		"@codemirror/legacy-modes": "^6.3.3",
		"@fontsource/roboto": "^4.5.8",
		"@fontsource/roboto-mono": "^5.0.8",
		"codemirror": "^6.0.1",
		"color": "^4.2.3",
		"material-icons": "^1.13.5",
		"pinia": "^2.0.32",
		"socket.io-client": "^4.6.2",
		"uuid": "^9.0.0",
		"vue": "^3.2.47",
		"yaml": "^2.3.3"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.2.0",
		"@types/color": "^3.0.3",
		"@types/node": "^18.14.2",
		"@types/uuid": "^9.0.1",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/eslint-config-prettier": "^7.1.0",
		"@vue/eslint-config-typescript": "^11.0.2",
		"@vue/tsconfig": "^0.1.3",
		"eslint": "^8.34.0",
		"eslint-plugin-vue": "^9.9.0",
		"marked": "4.1.1",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.4",
		"typescript": "~4.8.4",
		"vite": "^4.1.4",
		"vue-tsc": "^1.2.0"
	}
}
